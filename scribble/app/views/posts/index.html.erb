<h1> Life, Universe and Everything </h1>
<h2> (Scribbler) </h2>

<h3><%= link_to 'Create new Topic', new_post_path %></h3>
<div id="tablebox">
<table>
  <tr>
    <th>Topic</th>
    <th>Text</th>
  </tr>

  <% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.topic, post_path(post) %></td>
    <td><%= post.text %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
  </tr>
  <% end %>
</table>
</div>
